# ReddyTalk.ai Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================
# Core Application Settings
# ============================
NODE_ENV=development
APP_NAME=ReddyTalk.ai
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# ============================
# AI & Language Models
# ============================
# OpenAI API for conversational AI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7

# ============================
# Voice & Speech Services
# ============================
# ElevenLabs for voice synthesis
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_preferred_voice_id
ELEVENLABS_MODEL_ID=eleven_turbo_v2

# Deepgram for speech-to-text
DEEPGRAM_API_KEY=your_deepgram_api_key_here
DEEPGRAM_MODEL=nova-2-medical

# ============================
# VoIP & Telephony
# ============================
# Twilio for phone system
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.com/webhooks/twilio

# ============================
# Database & Storage
# ============================
# PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/reddytalk_db
DATABASE_SSL_MODE=disable

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ============================
# Local development ports
# ============================
WEBSITE_PORT=3000
API_PORT=8000
VOICE_GATEWAY_PORT=8001
MCP_SERVER_PORT=9000
WEBSOCKET_PORT=8080

# ============================
# ElevenLabs Voice AI Integration
# ============================
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL
ELEVENLABS_WEBHOOK_TOKEN=your-secure-webhook-token-here

# ============================
# Authentication & Security
# ============================
JWT_SECRET=your-jwt-secret-key-change-this
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# ============================
# Training Pipeline Configuration
# ============================
TRAINING_MIN_DATA_THRESHOLD=100
TRAINING_QUALITY_THRESHOLD=0.8
TRAINING_INTERVAL_HOURS=24
TRAINING_BATCH_SIZE=16
TRAINING_EPOCHS=3
LEARNING_RATE=0.0001
USE_GPU=false
MAX_TRAINING_TIME_HOURS=8

# Deployment Settings
AUTO_DEPLOY=false
STAGING_TEST_DURATION_HOURS=2
REQUIRE_MANUAL_APPROVAL=true
ENABLE_PROD_DEPLOYMENT=false

# ============================
# Cloud Provider Settings (Optional)
# ============================
# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
SAGEMAKER_ENDPOINT=

# Azure
AZURE_CLIENT_ID=your_azure_client_id
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_OPENAI_ENDPOINT=
AZURE_ML_ENDPOINT=

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json
GCP_PROJECT_ID=your_project_id

# ============================
# Monitoring & Telemetry
# ============================
ENABLE_TELEMETRY=false
LOG_LEVEL=info
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
