{
  "info": {
    "name": "ReddyTalk AI API",
    "description": "Complete API collection for testing ReddyTalk AI Medical Receptionist",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Checks",
      "item": [
        {
          "name": "Basic Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/health"
          }
        },
        {
          "name": "Live Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/health/live"
          }
        },
        {
          "name": "Ready Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/health/ready"
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"admin@reddytalk.ai\",\n    \"password\": \"admin123\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/login"
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"newuser@clinic.com\",\n    \"password\": \"password123\",\n    \"name\": \"New User\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/register"
          }
        }
      ]
    },
    {
      "name": "Patient Management",
      "item": [
        {
          "name": "List Patients",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/patients"
          }
        },
        {
          "name": "Get Patient",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/patients/1"
          }
        },
        {
          "name": "Create Patient",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Test Patient\",\n    \"phone\": \"+1234567890\",\n    \"email\": \"test@patient.com\"\n}"
            },
            "url": "{{baseUrl}}/api/patients"
          }
        }
      ]
    },
    {
      "name": "Call Management",
      "item": [
        {
          "name": "Create Call",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"patientId\": 1,\n    \"type\": \"outbound\"\n}"
            },
            "url": "{{baseUrl}}/api/calls"
          }
        },
        {
          "name": "List Calls",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/calls"
          }
        },
        {
          "name": "Active Calls",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/calls/active"
          }
        },
        {
          "name": "End Call",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/calls/call-123456789/end"
          }
        }
      ]
    },
    {
      "name": "AI Conversation",
      "item": [
        {
          "name": "Start Conversation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"patientId\": 1,\n    \"context\": \"New patient calling for appointment\"\n}"
            },
            "url": "{{baseUrl}}/api/conversation/start"
          }
        },
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"sessionId\": \"conv-123456789\",\n    \"message\": \"I need to schedule an appointment for next week\"\n}"
            },
            "url": "{{baseUrl}}/api/conversation/message"
          }
        }
      ]
    },
    {
      "name": "Voice Services",
      "item": [
        {
          "name": "Text to Speech",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"text\": \"Hello, this is ReddyTalk AI. How can I help you today?\",\n    \"voice\": \"emily\"\n}"
            },
            "url": "{{baseUrl}}/api/voice/text-to-speech"
          }
        },
        {
          "name": "Speech to Text",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"audioUrl\": \"https://example.com/audio-sample.mp3\"\n}"
            },
            "url": "{{baseUrl}}/api/voice/speech-to-text"
          }
        }
      ]
    },
    {
      "name": "Testing",
      "item": [
        {
          "name": "Simple Test",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/test/simple"
          }
        },
        {
          "name": "AI Knowledge Test",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/test/simple/knowledge"
          }
        },
        {
          "name": "Metrics",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/metrics"
          }
        }
      ]
    }
  ]
}